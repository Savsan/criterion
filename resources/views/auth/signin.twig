<div>
	<a class="hiddenanchor" id="signup"></a>
	<a class="hiddenanchor" id="signin"></a>

	<div class="login_wrapper">
		<div class="animate form login_form">
			<section class="login_content">
				{% include 'templates/partials/flash.twig' %}
				<form action="{{ path_for('auth.signin') }}" method="post" autocomplete="off">
					<h1>Вход в систему</h1>
					<div class="form-group{{ errors.email ? ' has-error' : '' }}">
						<input class="form-control" type="email" name="email" id="email" placeholder="Введите e-mail" value="{{ old.email }}" class="form-control">
						{% if errors.email %}
							<span class="help-block">Неправильно указанный или уже зарегистрированный Email</span>
						{% endif %}
					</div>
					<div class="form-group{{ errors.password ? ' has-error' : '' }}">
						<input type="password" name="password" id="password" placeholder="Введите пароль" class="form-control">
						{% if errors.password %}
							<span class="help-block">Введите пароль</span>
						{% endif %}
					</div>
					<div>
						<input type="submit" value="Войти" class="btn btn-success">
					</div>

					<div class="clearfix"></div>

					<div class="separator">

						<div class="clearfix"></div>
						<br />

						<div>
							<h1><i class="fa fa-pie-chart"></i> Criterion HRM</h1>
							<p>©{{ current.year }} Created by Alexandr Varabyou</p>
						</div>
					</div>
					{{ csrf.field | raw }}
				</form>
			</section>
		</div>
	</div>
</div>