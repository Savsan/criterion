{% extends 'templates/app.twig' %}


{% block content %}

	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="panel panel-default">
				<div class="panel-heading">Sign UP</div>
				<div class="panel-body">

					<form action="{{ path_for('auth.signup') }}" method="post" autocomplete="off">

						<div class="form-group{{ errors.email ? ' has-error' : '' }}">
							<label for="email">Email</label>
							<input type="email" name="email" id="email" placeholder="example@domain.com" value="{{ old.email}}" class="form-control">
							{% if errors.email %}
								<span class="help-block">Неправильно указанный или уже зарегистрированный Email</span>
							{% endif %}
						</div>
						
						<div class="form-group{{ errors.name ? ' has-error' : '' }}">
							<label for="name">Name</label>
							<input type="name" name="name" id="name" placeholder="Enter your name" value="{{ old.name }}" class="form-control">
							{% if errors.name %}
								<span class="help-block">Введите Имя</span>
							{% endif %}
						</div>
						
						<div class="form-group{{ errors.password ? ' has-error' : '' }}">
							<label for="password">Password</label>
							<input type="password" name="password" id="password" placeholder="Enter your password" class="form-control">
							{% if errors.password %}
								<span class="help-block">Введите пароль</span>
							{% endif %}
						</div>

						<input type="submit" value="Sign UP" class="btn btn-success">

						{{ csrf.field | raw }}

					</form>

				</div>
			</div>
		</div>
	</div>

{% endblock %}