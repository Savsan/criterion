{% extends 'templates/app.twig' %}

{% block content %}

    <div class="page-title">
        <div class="title_left">
            <a href="{{ path_for('auth.signup') }}"><button class="btn btn-default btn-app"><span class=" fa fa-user"></span> Добавить</button></a>
        </div>

        <div class="title_right">
            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                <div class="input-group">
                    <input class="form-control" placeholder="Поиск..." type="text">
                    <span class="input-group-btn">
                      <button class="btn btn-default" type="button"><span class=" fa fa-search"></span></button>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>

    <div class="row">
        <div class="x_panel">
            <div class="x_title">
                <H2>Пользователи системы</H2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th>#id</th>
                            <th>Фамилия</th>
                            <th>Имя</th>
                            <th>Отчество</th>
                            <th>Компания</th>
                            <th>Роль</th>
                            <th>Правка</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                        <tr>
                            <td># {{ user.idusers }}</td>
                            <td>{{ user.middle_name }}</td>
                            <td>{{ user.first_name }}</td>
                            <td>{{ user.last_name }}</td>
                            <td>СпецТрансЛизинг</td>
                            <td>{{ user.role }}</td>
                            <td>
                                <a href="?profile={{ user.idusers }}" class="btn btn-primary btn-xs"><i class="fa fa-user"></i> Профиль </a>
                                <a href="?correct={{ user.idusers }}" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Править </a>
                                <a href="?delete={{ user.idusers }}" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Удалить </a>
                            </td>
                        </tr>
                       {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}